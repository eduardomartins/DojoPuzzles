
IDIR=../include
ODIR=.

CC=g++
CFLAGS=-i$(IDIR)

LDIR=../libs
LIBS=-lm

_DEPS=main.cpp
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = main.o utilits.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))


$(info ${OBJ} ${DEPS})

%.o: %.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)


$(ODIR)/%.o: %.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

main: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~ 
